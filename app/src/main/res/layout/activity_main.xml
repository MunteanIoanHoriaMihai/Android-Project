<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose level"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="60dp"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/Level1Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/phoenix"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Level2Image"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/Level2Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/phoenix"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/Level1Image"
        app:layout_constraintRight_toRightOf="@id/Level3Image"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/Level3Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/phoenix"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/Level2Image"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/Level1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Level 1"
        app:layout_constraintTop_toBottomOf="@id/Level1Image"
        app:layout_constraintStart_toStartOf="@id/Level1Image"
        app:layout_constraintEnd_toEndOf="@id/Level1Image"/>

    <TextView
        android:id="@+id/Level2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Level 2"
        app:layout_constraintTop_toBottomOf="@id/Level2Image"
        app:layout_constraintStart_toStartOf="@id/Level2Image"
        app:layout_constraintEnd_toEndOf="@id/Level2Image"/>

    <TextView
        android:id="@+id/Level3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Level 3"
        app:layout_constraintTop_toBottomOf="@id/Level3Image"
        app:layout_constraintStart_toStartOf="@id/Level3Image"
        app:layout_constraintEnd_toEndOf="@id/Level3Image"/>

</android.support.constraint.ConstraintLayout>